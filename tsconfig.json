{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ],
         "lib": ["es2017", "dom"]
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "silent": true
    }
}
